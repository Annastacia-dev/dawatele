<div id="<%= dom_id product_category %>">
  <% if action_name != "show" %>
    <%= link_to "Show this product category", product_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this product category", edit_product_category_path(product_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
