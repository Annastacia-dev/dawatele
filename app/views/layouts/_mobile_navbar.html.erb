<div class="flex flex-col pt-10 items-center fixed inset-0 right-1/4 font-normal text-sm z-10 hidden capitalize bg-gray-100 shadow-lg p-4" id='mobile-menu'>
    <ul class="flex flex-col space-y-10">
      <li data-controller="dropdown" class='relative'>
        <button data-action="click->dropdown#toggle" class="flex items-center gap-1 hover:underline">
            <p class='flex items-center gap-2 capitalize'>
            <span class>Shop By Category</span>
            </p>
            <i class="fa-solid fa-caret-down"></i>
        </button>

        <ul data-dropdown-target="menu" class="hidden rounded-md mt-3 flex flex-col gap-3 absolute px-4 py-2  border w-60 bg-gray-900 text-white">
            <% ProductCategory.active.each_with_index do |category, index| %>
            <li class='text-center capitalize'>
              <%= link_to category.name, product_category_path(category), class: "hover:underline" %>
            </li>
            <% if index < ProductCategory.active.length - 1 %>
                <li class="border-b border-white"></li>
            <% end %>
            <% end %>
        </ul>
      </li>

      <li>
        <a href="#" class="hover:underline">
          <i class="fa-solid fa-plus"></i>
          Upload prescription
        </a>
      </li>
    </ul>
</div>