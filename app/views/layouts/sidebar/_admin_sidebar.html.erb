<div class='bg-gray-900 w-1/8 fixed min-h-screen text-white top-0 left-0 px-6 py-4'>
   <div class='flex flex-col items-start gap-4 text-xs text-white list-style-none'>
      <%= link_to root_path, class: 'flex justify-center items-center gap-2 text-white no-underline p-2 hover:bg-gray-800' do %>
        <i class="fas fa-home"></i>
        <p class='uppercase'>dashboard</p>
      <% end %>

      <hr class='w-full border border-gray-800'>

      <details class='w-full'>
        <summary class='flex justify-between items-center gap-2 text-white no-underline p-2 hover:bg-gray-800'>
        <i class="fa-regular fa-rectangle-list"></i>
          <p class='uppercase'>products</p>
          <i class="fas fa-caret-down"></i>
        </summary>
        <div class='flex flex-col items-start gap-2 text-xs text-white list-style-none'>
          <%= link_to root_path, class: 'flex justify-center items-center gap-2 text-white no-underline p-2 hover:bg-gray-800' do %>
            <i class="fa-solid fa-pills"></i>
            <p class='uppercase'>products</p>
          <% end %>
          <%= link_to root_path, class: 'flex justify-center items-center gap-2 text-white no-underline p-2 hover:bg-gray-800' do %>
            <i class="fa-solid fa-layer-group"></i>
            <p class='uppercase'>product categories</p>
          <% end %>
        </div>
      </details>

   </div>
</div>
