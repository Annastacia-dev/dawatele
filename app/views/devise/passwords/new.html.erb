<div class="grid md:grid-cols-2 grid-cols-1 justify-center md:items-center h-screen">

  <div class="hidden md:flex justify-center items-center col-span-1 h-screen">
   <%= image_tag('bg-4.png', class: 'object-cover object-center') %>
  </div>


  <div class="col-span-1 px-6 md:border-l flex flex-col gap-4">
    <h2 class="text-2xl font-semibold uppercase mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'flex flex-col gap-12 lg:w-3/4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="flex flex-col gap-1">
        <%= f.label :email, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " bg-transparent border-gray-800 focus:outline-none focus:bg-transparent  px-4 py-2" %>
      </div>
  
      <%= f.submit "Send me reset password instructions", class: "bg-gray-900 text-white px-4 py-2 focus:outline-none hover:bg-gray-800" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>



