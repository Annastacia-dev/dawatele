<div class="grid md:grid-cols-2 grid-cols-1 justify-center md:items-center h-screen">

  <div class="hidden md:flex justify-center items-center col-span-1 h-screen">
   <%= image_tag('bg-3.png', class: 'object-cover object-center') %>
  </div>


  <div class="col-span-1 px-6 md:border-l flex flex-col gap-4">
    <h2 class="text-2xl font-semibold uppercase mb-4">Resend confirmation instructions</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'flex flex-col gap-12 lg:w-1/2' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col gap-1">
        <%= f.label :email, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: " bg-transparent border-gray-800 focus:outline-none focus:bg-transparent  px-4 py-2"  %>
      </div>

      <div>
        <%= f.submit "Resend confirmation instructions", class: "bg-gray-900 text-white px-4 py-2 focus:outline-none hover:bg-gray-800 cursor-pointer" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>


