<div class="grid md:grid-cols-2 grid-cols-1 justify-center h-screen">

  <div class="hidden md:block col-span-1 md:bg-cover md:bg-center h-screen"
   style="background-image: url('<%= asset_path('bg-1.png') %>');">
  </div>


  <div class="col-span-1 px-6 md:border-l flex flex-col gap-4 mt-5">
    <h2 class="text-2xl font-semibold uppercase mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col gap-12 lg:w-1/2" }) do |f| %>
      <div class="flex flex-col gap-1">
        <%= f.label :email, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " bg-transparent border-gray-800 focus:outline-none focus:bg-transparent  px-4 py-2" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= f.label :password, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "bg-transparent border-gray-800 focus:outline-none focus:bg-transparent  px-4 py-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me, class: "mr-2 text-xl h-6 w-6 bg-transparent" %>
          <%= f.label :remember_me, class: "text-sm" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "bg-gray-900 text-white px-4 py-2 focus:outline-none hover:bg-gray-800 w-full cursor-pointer" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>
